                        ThumbColor="Purple"
                        MinimumTrackColor="Green"
                        MaximumTrackColor="Blue" />
            </StackLayout>
            <Label Text="Notes"
                   Grid.Row="1"
                   Style="{StaticResource AppLabelStyle}" />
            <ScrollView Grid.Row="2">
                <Editor Text="{Binding Path=Model.Notes}"
                        Placeholder="Notes"
                        VerticalOptions="FillAndExpand"
                        AutoSize="TextChanges" />
            </ScrollView>-->
        </Grid>
    </ContentPage.Content>
</ContentPage>