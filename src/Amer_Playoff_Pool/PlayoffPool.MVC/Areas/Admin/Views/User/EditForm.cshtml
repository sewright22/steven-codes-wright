@model UserModel

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <input asp-for="FirstName" />
    <input asp-for="LastName" />
    <input asp-for="Email" />
    <select asp-for="RoleId" asp-items="@(new SelectList(this.Model.Roles, nameof(SelectListItem.Value), nameof(SelectListItem.Text)))">
        <option>Select One</option>
    </select>
</form>