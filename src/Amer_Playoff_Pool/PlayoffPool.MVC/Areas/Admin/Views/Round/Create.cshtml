@model RoundModel

@{
    Layout = "ModalLayout";
}

<form asp-controller="Round" asp-action="Create" id="roundForm-@this.Model.Id">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="PlayoffId" />
    <input type="hidden" asp-for="SeasonId" />
    <div class="row mb-3">
        <label asp-for="Name" class="col-12 col-form-label"></label>
        <select class="col-12" asp-for="Name" asp-items="@(new SelectList(this.Model.Rounds, nameof(SelectListItem.Value), nameof(SelectListItem.Text)))">
            <option>Select One</option>
        </select>
    </div>
    <div class="row">
        <label class="col-12" asp-for="PointValue"></label>
        <input class="col-12" type="number" asp-for="PointValue" />
    </div>
</form>

@section ModalFooter
{
    <cancel-button></cancel-button>
    <button type="submit" class="btn pp-button pp-button-primary" data-dismiss="modal" data-form-id="roundForm-@this.Model.Id">Save</button>
}