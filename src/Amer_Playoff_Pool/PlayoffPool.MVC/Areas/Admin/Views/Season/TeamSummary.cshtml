@model PlayoffTeamModel

<div class="row pp-bracket-summary">

    <span class="col">
        <span class="pp-label">Seed</span>
        <span class="pp-label-value">@this.Model.Seed</span>
    </span>

    <span class="col">
        <span class="pp-label">Name</span>
        <span class="pp-label-value">@this.Model.Name</span>
    </span>

    <span class="col-auto">
        <button type="button" class="btn pp-button pp-button-secondary modal-button" data-url="/Admin/PlayoffTeam/Edit/@this.Model.Id">Update</button>
    </span>
</div>
