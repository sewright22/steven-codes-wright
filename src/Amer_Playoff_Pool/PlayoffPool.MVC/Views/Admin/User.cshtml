@model UserModel

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="../Admin">Admin</a></li>
        <li class="breadcrumb-item"><a href="../Users">All Users</a></li>
        <li class="breadcrumb-item active" aria-current="page">@this.Model.LastName, @this.Model.FirstName</li>
    </ol>
</nav>

<form asp-action="User">
    <input type="hidden" asp-for="Id" />
    <input asp-for="FirstName" />
    <input asp-for="LastName" />
    <input asp-for="Email" />
    <select asp-for="RoleId" asp-items="@(new SelectList(this.Model.Roles, nameof(SelectListItem.Value), nameof(SelectListItem.Text)))">
        <option>Select One</option>
    </select>
    <div class="button-group pp-button-bar">
        <button class="btn btn-primary pp-button" type="submit">Save</button>
        <button class="btn pp-button pp-button-secondary" type="reset">Cancel</button>
    </div>
</form>